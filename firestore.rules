rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write access to guests collection
    match /guests/{document} {
      allow read, write: if true;
    }
    
    // Allow read and write access to service_sessions collection
    match /service_sessions/{document} {
      allow read, write: if true;
    }
    
    // Allow read and write access to events collection (for future use)
    match /events/{document} {
      allow read, write: if true;
    }
    
    // For production, consider implementing proper authentication:
    // allow read, write: if request.auth != null;
    // Or more granular rules based on user roles
  }
}
